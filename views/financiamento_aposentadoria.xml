<odoo>

    <record model="ir.ui.view" id="esocial.financiamento_aposentadoria_form">
        <field name="name">esocial.financiamento_aposentadoria_form</field>
        <field name="model">esocial.financiamento_aposentadoria</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Financiamento da Aposentadoria Especial"
            edit="false" create="false" delete="false">
                <sheet>
                    <group>
                        <group name="geral" colspan="2" col="2">
                            <field name="codigo"/>
                            <field name="nome" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="esocial.financiamento_aposentadoria_tree">
        <field name="name">esocial.financiamento_aposentadoria_view</field>
        <field name="model">esocial.financiamento_aposentadoria</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Financiamento da Aposentadoria Especial"
            edit="false" create="false" delete="false">
                <field name="codigo" />
                <field name="nome" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="financiamento_aposentadoria_search">
        <field name="name">esocial.financiamento_aposentadoria_search</field>
        <field name="model">esocial.financiamento_aposentadoria</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search string="Financiamento da Aposentadoria Especial">
                <field name="codigo" />
                <field name="nome" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="financiamento_aposentadoria_action">
        <field name="name">Financiamento da Aposentadoria Especial</field>
        <field name="res_model">esocial.financiamento_aposentadoria</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="financiamento_aposentadoria_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="financiamento_aposentadoria_tree"/>
        <field name="act_window_id" ref="financiamento_aposentadoria_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="financiamento_aposentadoria_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="financiamento_aposentadoria_form"/>
        <field name="act_window_id" ref="financiamento_aposentadoria_action"/>
    </record>

    <menuitem
        action="esocial.financiamento_aposentadoria_action"
        id="menu_esocial_financiamento_aposentadoria"
        name="02-Finan.Apos.Especial"
        parent="menu_esocial_tabelas"
        sequence="02"
    />

</odoo>
